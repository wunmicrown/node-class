<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        div:has(.add-std-btn) {
            display: flex;
            justify-content: flex-end;
        }
        .add-std-btn{
            color: white;
            background-color: rgb(43, 199, 43);
            border-radius: 8px;
            padding: 15px 20px;
            text-decoration: none;
            box-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <h1>Dashboard</h1>
    <div>
        <a class="add-std-btn" href="/login">Add stundent</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.map(user => { %>
                <tr>
                    <td><%= user.username %> </td>
                    <td><%= user.email %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
